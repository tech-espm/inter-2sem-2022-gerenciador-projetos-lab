<div class="row">

	<% if (!projetos.length == 0) { %>
		<div class="col-xl-4 col-md-4 mb-4">
			<div class="card border-danger shadow h-100 py-3">
				<!-- Card Body -->
				<div class="card-body">
					<div class="mt-4 font-weight-bold text-center medium">Opa!</div>
					<div class="mt-4 text-center small">Parece que você não tem nenhum projeto cadastrado!></div>	
				</div>
			</div>
		</div>
	<% } else { %>
	<% for (let i = 0; i < projetos.length; i++) { %>
	<div class="col-xl-4 col-md-4 mb-4">
		<div class="card border-danger shadow h-100 py-3">
			<!-- Card Header - Dropdown -->
			<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
				<h6 class="m-0 font-weight-bold text-danger"><%= projetos[i].nome_projeto %></h6>
			</div>
			<!-- Card Body -->
			<div class="card-body">
				<div class="mt-4 font-weight-bold text small">Gestor:</div>
				<div class="mt-4 text small"><%= projetos[i].nome_gestor %></div>	
				<div class="mt-4 font-weight-bold text small">Técnico:</div>
				<div class="mt-4 text small"><%= projetos[i].nome_tecnico %></div>	
				<div class="mt-4 text small"> </div>
				<h4 class="small font-weight-bold">Progresso <span class="float-right">20%</span>
				</h4>
				<div class="progress">
					<div class="progress-bar bg-danger" role="progressbar" style="width: 20%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
			</div>
		</div>
	</div>
	<% } %>
	<% } %>
</div>

<%- contentFor("scripts") %> 

<script src="<%- staticRoot %>/lib/chart.js/chart.min.js"></script>
<script src="<%- staticRoot %>/js/exemplo/chart-area.js"></script>
<script src="<%- staticRoot %>/js/exemplo/chart-pie.js"></script> 
